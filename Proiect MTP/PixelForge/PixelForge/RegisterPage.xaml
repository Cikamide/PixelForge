<Window x:Class="PixelForge.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixelForge"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage" Height="800" Width="1500" MinWidth="300" MinHeight="300" SizeToContent="Manual" ResizeMode="CanResize">
    <Grid Background="#0B1120">
        <Button Content="← Înapoi"
            Click="BackButton_Click"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="20"
            Padding="10,5"
            FontSize="16"
            Background="#334155"
            Foreground="White"
            FontWeight="Bold"
            BorderThickness="0"
            Cursor="Hand"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Margin="20">

            <TextBlock Text="Înregistrare"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <!-- Username -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Username:"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Grid.Column="0"/>
                <TextBox x:Name="UsernameBox"
                         Height="30"
                         FontSize="20"
                         Grid.Column="1"/>
            </Grid>

            <!-- Parolă -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Parolă:"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Grid.Column="0"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="30"
                             FontSize="20"
                             Grid.Column="1"/>
            </Grid>

            <!-- Buton înregistrare -->
            <Button Content="Înregistrează"
                    Click="RegisterButton_Click"
                    Background="#22C55E"
                    Foreground="White"
                    Height="40"
                    Margin="0,30,0,0"
                    FontSize="18"
                    FontWeight="Bold"
                    HorizontalAlignment="Stretch" />
        </StackPanel>
        
    </Grid>


</Window>
