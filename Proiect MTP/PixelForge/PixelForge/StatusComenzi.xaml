<Window x:Class="PixelForge.StatusComenzi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status Comenzi" Height="800" Width="1500"
        ResizeMode="CanResize" Background="#0B1120">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Bara de sus cu buton Înapoi -->
        <Grid Background="#1E293B" Height="60">
            <Button Content="⟵ Înapoi"
                    Click="BackButton_Click"
                    Background="#334155"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="10,5"
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Cursor="Hand"/>
        </Grid>

        <!-- Bara de căutare -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <Grid Margin="0,10,10,10">
                <TextBox x:Name="SearchTextBox"
             Width="300"
             Height="35"
             FontSize="14"
             VerticalContentAlignment="Center"
             Padding="5"
             Background="White"
             Foreground="Black"
             TextChanged="SearchTextBox_TextChanged" />

                <TextBlock x:Name="SearchPlaceholder"
               Text="Caută după client..."
               Foreground="Gray"
               FontSize="14"
               VerticalAlignment="Center"
               Margin="8,0,0,0"
               IsHitTestVisible="False"
               Visibility="Visible" />
            </Grid>

            <Button Content="Caută"
                    x:Name="SearchButton"
                    Click="SearchButton_Click"
                    Background="#3B82F6"
                    Foreground="White"
                    Padding="10,5"
                    FontSize="14"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Height="35"
                    Width="100"
                    Margin="0,10,0,10"/>
        </StackPanel>

        <!-- Lista comenzilor -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel x:Name="ComenziListPanel" />
        </ScrollViewer>
    </Grid>
</Window>
